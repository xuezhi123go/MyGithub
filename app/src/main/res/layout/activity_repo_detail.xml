<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:background="@color/blue_grey"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:background="@color/repo_header"
            app:titleEnabled="false">

            <RelativeLayout
                android:id="@+id/rl_repo_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/repo_header"
                android:paddingLeft="25dp"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/tv_repo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:text="my_github"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_marginLeft="8dp"
                    android:layout_alignBottom="@+id/tv_repo_name"
                    android:layout_toRightOf="@id/tv_repo_name"
                    android:text="java"
                    style="@style/tv_tip"/>

                <TextView
                    android:id="@+id/repo_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_repo_name"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_25"
                    android:maxLines="2"
                    android:text="descdescdesc"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textSize="16sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/repo_desc"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            style="@style/iv_small_avatar"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:src="@drawable/default_avatar"/>

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/iv_avatar"
                            android:layout_marginLeft="@dimen/dimen_8"
                            android:layout_toRightOf="@+id/iv_avatar"
                            android:text="name"
                            android:textSize="17sp"/>

                        <TextView
                            android:id="@+id/tv_create_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_avatar"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:text="2017-10-10"
                            android:textSize="16sp"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_follow"
                            style="@style/tv_tip"
                            android:text="follows"/>

                        <TextView
                            android:id="@+id/tv_stars"
                            android:layout_marginTop="@dimen/dimen_8"
                            style="@style/tv_tip"
                            android:text="stars"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--<ImageView
                android:id="@+id/iv_avatar_big"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/default_avatar"
                app:layout_collapseMode="parallax"
                style="@style/avatar_big"/>-->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="@dimen/bottom_height"
                android:layout_marginTop="25dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_avatar_small"
                    style="@style/iv_small_avatar"
                    android:src="@drawable/default_avatar"/>

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/toolbar_title"
                    style="@style/tv_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="my_github"/>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.design.widget.TabLayout
            android:id="@+id/tb_repo"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:tabIndicatorColor="@android:color/black"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/cardview_dark_background"
            app:tabTextColor="@color/md_grey_300">

        </android.support.design.widget.TabLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/vp_repo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>