<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/blue_grey"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/iv_user_header"
                android:scaleType="centerCrop"
                android:src="@drawable/nav_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iv_avatar_big"
                    style="@style/avatar_big"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/default_avatar"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="username"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:maxLines="1"
                    style="@style/tv_user_detail"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:text="I have nothing to say"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_80"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_16"
                        android:layout_height="@dimen/dimen_16"
                        android:src="@drawable/ic_business_white_18dp"/>

                    <TextView
                        android:id="@+id/tv_business"
                        style="@style/tv_user_detail"
                        android:layout_marginLeft="6dp"
                        android:text="unknow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_80"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_16"
                        android:layout_height="@dimen/dimen_16"
                        android:src="@drawable/ic_email_white_18dp"/>

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/tv_user_detail"
                        android:layout_marginLeft="6dp"
                        android:text="unknow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_80"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_16"
                        android:layout_height="@dimen/dimen_16"
                        android:src="@drawable/ic_place_white_18dp"/>

                    <TextView
                        android:id="@+id/tv_place"
                        style="@style/tv_user_detail"
                        android:layout_marginLeft="6dp"
                        android:text="unknow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_80"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_16"
                        android:layout_height="@dimen/dimen_16"
                        android:src="@drawable/ic_rss_feed_white_18dp"/>

                    <TextView
                        android:id="@+id/tv_rss_feed"
                        style="@style/tv_user_detail"
                        android:layout_marginLeft="6dp"
                        android:text="unknow"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_height"
                android:layout_marginTop="25dp"
                app:layout_collapseMode="pin">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/toolbar_title"
                    android:text="user"
                    style="@style/tv_toolbar_title"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_repos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>