<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/ll_notification_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_state_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:src="@drawable/stared_icon" />

        <TextView
            android:id="@+id/tv_new_date_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:paddingLeft="@dimen/dimen_8"
            android:text="date"
            android:textColor="@color/gray_line"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@id/ll_notification_state"
            android:background="@drawable/red_bg"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_5"
            android:text="New"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@+id/ll_notification_state"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp" />
    <!--android:src="@drawable/default_avatar" -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_notification_state"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_toLeftOf="@+id/tv_follow"
        android:layout_toRightOf="@+id/iv_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_new_data_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2342342352jkljjkljglj"
            android:textColor="@color/user_blue"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_data_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_avatar"
        android:paddingLeft="7dp"
        android:paddingTop="@dimen/dimen_10"
        android:textColor="@color/gray_line"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_detail_data_notification"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@color/gray_back" />
</RelativeLayout>