<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/status_view_notifications"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/toolBar" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_notifications"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        android:background="@color/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginRight="@dimen/dimen_14"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_button"
                android:layout_width="@dimen/dimen_70"
                android:layout_height="@dimen/dimen_28"
                android:background="@drawable/notification_left_selected"
                android:clickable="true"
                android:gravity="center"
                android:text="News"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_right_button"
                android:layout_width="@dimen/dimen_70"
                android:layout_height="@dimen/dimen_28"
                android:background="@drawable/notification_right_unselect"
                android:gravity="center"
                android:text="Activity"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
